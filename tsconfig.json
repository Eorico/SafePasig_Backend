{
  "compilerOptions": {
    // File Layout
    "rootDir": "./server",
    "outDir": "./dist",

    // Module system
    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],

    // Other outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    // Module handling / style options
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["server/**/*.ts", "server.ts"]
}
