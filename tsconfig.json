  "compilerOptions": {
    "rootDir": "./server",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": ["server/**/*.ts"]
}
